# TumzyTech Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_URI=mongodb://localhost:27017/tumzytech
DB_NAME=tumzytech

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
SESSION_SECRET=your_super_secret_session_key_here
JWT_SECRET=your_jwt_secret_key_here

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# PI NETWORK CONFIGURATION
# ============================================
PI_API_KEY=your_pi_network_api_key_here
PI_WALLET_ADDRESS=your_pi_wallet_address_here

# ============================================
# AI SERVICES CONFIGURATION
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# PYTHON BACKEND CONFIGURATION (for app/backend/)
# ============================================
MONGO_URL=mongodb://localhost:27017/tumzytech
FASTAPI_PORT=8001
